<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gamer Zone</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .table th {
            white-space: nowrap;
        }
        .badge {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Videojuegos" asp-action="Index">
                <i class="bi bi-controller"></i> Gamer Zone
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Videojuegos" asp-action="Index">
                            <i class="bi bi-house"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Videojuegos" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> Nuevo
                        </a>
                    </li>
                </ul>
                <span class="navbar-text">
                    <i class="bi bi-database"></i> MongoDB + ASP.NET Core 8
                </span>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container text-center">
            <span>Gamer Zone © 2024 - Base de Datos Avanzado II - CIBERTEC</span>
            <br>
            <small>
                <a href="https://github.com/cibertec-courses/gamerzone-web-mvc-mongo" target="_blank" class="text-light">
                    <i class="bi bi-github"></i> Ver en GitHub
                </a>
            </small>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>